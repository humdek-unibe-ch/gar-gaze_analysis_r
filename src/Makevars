# See Section 1.2.1 "Using 'Makevars'" of Writing R Extensions
# cran.r-project.org/doc/manuals/R-exts.pdf

GAC = gac
GACLIB = $(GAC)/.libs/lib$(GAC).a

CGLM = $(GAC)/cglm

PKG_CFLAGS=
PKG_CPPFLAGS=-I"$(GAC)/include" -I"$(CGLM)/include"
PKG_LIBS=-L"$(CGLM)/.libs" "$(GAC)/.libs/libgac.a" -lcglm -lm

.PHONY: all $(GACLIB)

all: clean $(SHLIB)
$(SHLIB): $(GACLIB)

$(GACLIB):
	(cd $(GAC); $(MAKE))

clean:
	(cd $(GAC); $(MAKE) clean)
